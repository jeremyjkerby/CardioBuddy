<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Date:"
            android:textColor="#00543C"
            android:textStyle="bold" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:text="Type:"
            android:textColor="#00543C"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/workoutType"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioBtnBike"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:text="Elliptical"
                android:textColor="#00543C" />

            <RadioButton
                android:id="@+id/radioBtnTreadmill"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:text="Stair Climber"
                android:textColor="#00543C" />

            <RadioButton
                android:id="@+id/radioBtnElliptical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:text="Stationary Bike"
                android:textColor="#00543C" />

            <RadioButton
                android:id="@+id/radioBtnStair"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:text="Treadmill"
                android:textColor="#00543C" />

            <RadioButton
                android:id="@+id/radioBtnOther"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:text="Other"
                android:textColor="#00543C" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="Resistance:"
            android:textColor="#00543C"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/resistanceText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Resistance"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Duration:"
            android:textColor="#00543C"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/durationText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Duration"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Distance:"
            android:textColor="#00543C"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/distanceText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Distance"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Calories:"
            android:textColor="#00543C"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/caloriesText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Calories"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Note:"
            android:textColor="#00543C"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/noteText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Note"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="text"
            android:maxLength="140" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#00543C"
            android:text="SAVE"
            android:textColor="#FDBB30" />

    </LinearLayout>

</ScrollView>

